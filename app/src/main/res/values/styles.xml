<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>>
        <item name="windowNoTitle">true</item>>
    </style>

    <style name="segmented_button" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/segmented_button_selector</item>
        <item name="android:textColor">@drawable/toggle_text_color</item>
    </style>

    <style name="colored_spinner_item" parent="TextAppearance.AppCompat.Widget.TextView.SpinnerItem">

    </style>

</resources>
